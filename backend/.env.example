# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
# For Local: mongodb://127.0.0.1:27017/vintage-coin-store
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/vintage-coin-store
# For VPS: mongodb://127.0.0.1:27017/vintage-coin-store
MONGODB_URI=mongodb://127.0.0.1:27017/vintage-coin-store

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Frontend URL (Your Live Domain)
# For Local Development: http://localhost:5173
# For Production: https://yourdomain.com or http://your-vps-ip:5173
FRONTEND_URL=http://localhost:5173

# Backend URL (Your Backend Domain/IP)
# This will be used for image URLs
# For Local: http://localhost:5000
# For Production: https://api.yourdomain.com or http://your-vps-ip:5000
BACKEND_URL=http://localhost:5000

# File Upload Configuration
MAX_FILE_SIZE=5242880

# Email Configuration (Gmail example)
# For Gmail: Create app password at https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM_NAME=E-Commerce Store
ADMIN_EMAIL=admin@example.com

# Razorpay Configuration
# Get these from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Google OAuth Configuration (Optional)
# Get credentials from: https://console.cloud.google.com/apis/credentials
# 1. Create a new OAuth 2.0 Client ID
# 2. Add authorized redirect URIs: https://chroniclevaults.com/api/auth/google/callback
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Facebook OAuth Configuration (Optional)
# Get credentials from: https://developers.facebook.com/apps/
# 1. Create a new app
# 2. Add Facebook Login product
# 3. Add Valid OAuth Redirect URIs: https://chroniclevaults.com/api/auth/facebook/callback
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/auth/facebook/callback
